entryPoints:
  http:
    address: :80
    http:
      redirections:
        entryPoint:
          to: https
  https:
    address: :443
    http:
      tls:
        certResolver: letsencrypt
        domains:
          - main: "*.{{ domain_name }}"

  traefik:
    address: :{{ traefik_admin_port }}

api:
  insecure: true
  dashboard: true

log:
  level: INFO

serversTransport:
  insecureSkipVerify: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ traefik_acme_email }}"
      storage: /letsencrypt/acme.json
      dnsChallenge:
        provider: duckdns

providers:
  docker:
    network: "{{ docker_network_name }}"
    exposedByDefault: false
